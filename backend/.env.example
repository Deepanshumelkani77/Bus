# ===========================================
# BACKEND ENVIRONMENT CONFIGURATION EXAMPLE
# ===========================================
# Copy this file to .env and set your actual values

# Server Configuration
NODE_ENV=production
PORT=2000

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster0.mongodb.net/database_name?retryWrites=true&w=majority

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Google Maps API Configuration
GOOGLE_API_KEY=your_google_maps_api_key_here

# CORS Configuration
CORS_ORIGIN=*
SOCKET_CORS_ORIGIN=*

# Frontend URLs (for CORS and redirects)
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:3000
DRIVER_APP_URL=exp://localhost:8081

# API Base URLs (for internal references)
API_BASE_URL=http://localhost:2000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# Email Configuration (for future use)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Deployment Configuration
DEPLOYMENT_URL=https://your-backend-domain.com
